    <TextView
        android:id="@+id/textView_IRdevice"
        android:layout_weight="8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#73F0E5"
        android:textSize="25dp"/>

</LinearLayout>