<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="디바이스 이름"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/textView_detail_IRdeviceName"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:textSize="25dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="주소"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/textView_detail_IRdeviceAddress"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:textSize="25dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="회사"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/textView_detail_company"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:textSize="25dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="분류"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/textView_detail_classification"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:textSize="25dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="모델"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/textView_detail_model"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:textSize="25dp"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IR디바이스정보수정"
            android:onClick="reviseClicked"/>
    </LinearLayout>


</LinearLayout>