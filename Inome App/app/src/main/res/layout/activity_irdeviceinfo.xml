<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e71a1b21">

    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="이름"
        android:textSize="30dp"
        android:textColor="#73F0E5"
        android:id="@+id/textView"
        android:layout_marginTop="125dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/editText_IRdeviceInfo_name" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text=""
        android:textSize="25dp"
        android:textColor="#73F0E5"
        android:backgroundTint="@android:color/holo_orange_light"
        android:id="@+id/editText_IRdeviceInfo_name"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Address"
        android:textSize="30dp"
        android:textColor="#73F0E5"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:id="@+id/textView2" />
    <EditText
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:textColor="#73F0E5"
        android:backgroundTint="@android:color/holo_orange_light"
        android:id="@+id/editText_IRdeviceInfo_address"
        android:layout_above="@+id/spinner_company"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="회사"
        android:textSize="30dp"
        android:textColor="#73F0E5"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:id="@+id/textView3" />
    <Spinner
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/spinner_company"
        android:backgroundTint="@android:color/holo_orange_light"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/editText_IRdeviceInfo_address"></Spinner>

    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="분류"
        android:textSize="30dp"
        android:textColor="#73F0E5"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:id="@+id/textView4" />
    <Spinner
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/spinner_classification"
        android:backgroundTint="@android:color/holo_orange_light"
        android:layout_above="@+id/textView5"
        android:layout_toEndOf="@+id/textView4"></Spinner>

    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="모델"
        android:textSize="30dp"
        android:textColor="#73F0E5"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />
    <Spinner
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/spinner_model"
        android:backgroundTint="@android:color/holo_orange_light"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentEnd="true" ></Spinner>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="checkClicked"
        android:src="@drawable/confirm"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/button" />

</RelativeLayout>