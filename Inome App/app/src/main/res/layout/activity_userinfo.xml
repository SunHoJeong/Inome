<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="ID"
        android:textSize="30dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/editText_userInfo_id"
        android:layout_marginTop="124dp" />
    <EditText
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text=""
        android:textSize="30dp"
        android:id="@+id/editText_userInfo_id"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="PW"
        android:textSize="30dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:id="@+id/textView2" />
    <EditText
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:layout_below="@+id/editText_userInfo_id"
        android:layout_alignParentEnd="true"
        android:id="@+id/editText_userInfo_pw" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="이름"
        android:textSize="30dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:id="@+id/textView3" />
    <EditText
        android:id="@+id/editText_userInfo_name"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:layout_below="@+id/editText_userInfo_pw"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="phone"
        android:textSize="30dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:id="@+id/textView4" />
    <EditText
        android:id="@+id/editText_userInfo_phone"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="권한"
        android:textSize="30dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />
    <Spinner
        android:id="@+id/spinner_userInfo_authority"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"></Spinner>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textSize="30dp"
        android:onClick="checkClicked"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>